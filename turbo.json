{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [
        "dist/**",
        ".next/**",
        "!.next/cache/**"
      ],
      "env": [
        "BETTER_AUTH_SECRET",
        "BETTER_AUTH_URL",
        "GITHUB_CLIENT_ID",
        "GITHUB_CLIENT_SECRET",
        "DB_PASSWORD",
        "DB_USER",
        "DB_HOST",
        "DB_NAME",
        "DB_PORT",
        "ADMIN_API_TOKEN",
        "DATABASE_URL",
        "NODE_ENV",
        "SENTRY_AUTH_TOKEN"
      ]
    },
    "lint": {
      "outputs": []
    },
    "lint:es": {
      "outputs": []
    },
    "lint:ts": {
      "outputs": []
    },
    "test": {
      "dependsOn": ["build"],
      "outputs": []
    },
    "test:health": {
      "outputs": [],
      "env": [
        "GITHUB_CLIENT_ID",
        "GITHUB_CLIENT_SECRET",
        "BETTER_AUTH_SECRET",
        "BETTER_AUTH_URL",
        "DB_PASSWORD",
        "DB_USER",
        "DB_HOST",
        "DB_NAME",
        "DB_PORT",
        "NODE_ENV",
        "API_BASE"
      ]
    },
    "test:auth:basic": {
      "outputs": [],
      "env": [
        "GITHUB_CLIENT_ID",
        "GITHUB_CLIENT_SECRET",
        "BETTER_AUTH_SECRET",
        "BETTER_AUTH_URL",
        "DB_PASSWORD",
        "DB_USER",
        "DB_HOST",
        "DB_NAME",
        "DB_PORT",
        "NODE_ENV",
        "API_BASE"
      ]
    },
    "test:github-status": {
      "outputs": [],
      "env": [
        "GITHUB_CLIENT_ID",
        "GITHUB_CLIENT_SECRET",
        "BETTER_AUTH_SECRET",
        "BETTER_AUTH_URL",
        "DB_PASSWORD",
        "DB_USER",
        "DB_HOST",
        "DB_NAME",
        "DB_PORT",
        "NODE_ENV",
        "API_BASE"
      ]
    },
    "dev": {
      "cache": false
    }
  }
}


